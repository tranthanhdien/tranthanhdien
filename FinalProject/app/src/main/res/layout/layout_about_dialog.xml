<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20sp"
    app:cardElevation="20sp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTitleAboutApp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="Thông tin về App"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"></TextView>
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_info_app"
                android:layout_width="30dp"
                android:layout_height="30dp"></ImageView>
        </RelativeLayout>
        <View
            android:layout_marginTop="10dp"
            android:background="#AAA7A7"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:textColor="#3C3C38"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:text="Ứng dụng được xây dựng bằng ngôn ngữ Java. Cho phép giải một số bài toán đơn giản thông qua camera điện thoại. Ngoài ra ứng dụng có thể sử dụng chức năng Giọng nói để tính toán các bài toán cộng, trừ, nhân, chia, ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <View
            android:layout_marginTop="10dp"
            android:background="#AAA7A7"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <TextView
            android:id="@+id/txtClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/aclonica"
            android:padding="10dp"
            android:text="Đóng"
            android:textColor="#FF1100"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>