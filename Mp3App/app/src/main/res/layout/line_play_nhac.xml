<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtIndexPlayNhac"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="1"
        android:textColor="#FCFBFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSong"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/txtIndexPlayNhac"
        app:cardCornerRadius="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/imgSongPlayNhac"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

        </ImageView>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/txtNamePlayNhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@id/cardViewSong"
        android:textColor="#F8F7F7"
        android:textSize="17.5sp"></TextView>

    <TextView
        android:id="@+id/txtAuthorPlayNhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/cardViewSong"
        android:singleLine="true"
        android:text="Author"
        android:textColor="#FFFFFF"
        android:textSize="16sp"></TextView>


</RelativeLayout>